<!-- ./views/edit.handlebars -->
<form action="/todos/{{{todo._id}}}?_method=PUT" method="POST">
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <input type="checkbox" name="done" {{#if todo.done}} checked{{/if}} />
            </div>
        </div>
        <input type="text" class="form-control" placeholder="name" name="name" value="{{{todo.name}}}">
        <div class="input-group-append">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </div>
</form>